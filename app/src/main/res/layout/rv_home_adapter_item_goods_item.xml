<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_adapter_item_goods"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_project_home_adapter_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美容"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_name_home_adapter_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="娟娟美甲" />

    <TextView
        android:id="@+id/tv_describe_home_adapter_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="62人喜欢 917m" />

    <TextView
        android:id="@+id/tv_price_home_adapter_item_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="拼团价￥489" />
</LinearLayout>